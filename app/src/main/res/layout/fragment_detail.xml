<dev.spocht.spocht.activity.FractionalLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/details_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:columnCount="2"
    android:rowCount="1"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/details_fragment_infoContainer"
        android:padding="@dimen/default_padding"
        >

        <ImageView
            android:id="@+id/fragment_detail_image"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            tools:ignore="ContentDescription"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/fragment_detail_type"
            android:text="{TYPE}"
            android:layout_toEndOf="@+id/fragment_detail_image"
            android:textColor="@color/black"  />
        <TextView
            android:id="@+id/fragment_detail_title"
            android:layout_below="@id/fragment_detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{TITLE}"
            android:layout_toEndOf="@+id/fragment_detail_image"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/fragment_detail_fieldCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/fragment_detail_image"
            android:layout_below="@id/fragment_detail_title"
            android:text="{FIELD_COUNT}"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/fragment_detail_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/fragment_detail_image"
            android:layout_below="@id/fragment_detail_fieldCount"
            android:text="{COMMENT}"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black" />

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/fragment_detail_comment"
            android:layout_weight="1"
            android:background="@color/white"
            />
    </RelativeLayout>


</dev.spocht.spocht.activity.FractionalLinearLayout>
